<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.proyectoaplicacionesmoviles.Agenda.AgendaVistaFragment"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Agenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agenda General"
            android:gravity="center"/>
        <Button
            android:id="@+id/AgregarFicha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/holo_red_light"
            android:textColor="@color/colorAccent"
            android:drawableBottom="@drawable/ic_menu"/>
        <LinearLayout
            android:id="@+id/Calendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_calen"
            android:gravity="center">
            <CalendarView
                android:id="@+id/CalendarView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/FichasRecyclerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</FrameLayout>