<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.proyectoaplicacionesmoviles.ControlFinanciero.CajaDiariaVistaFragment"
    android:background="#F08080">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incluir no pagados"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/NoPagadoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/plus_icon"
            android:layout_margin="16dp"/>
        <LinearLayout
            android:id="@+id/CalendarioCajaDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_calen"
            android:gravity="center">
            <CalendarView
                android:id="@+id/CalendarViewCajaDiaria"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/EfectivoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efectivo: "/>
        <TextView
            android:id="@+id/TarjetaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarjeta: "/>
        <TextView
            android:id="@+id/DepositoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deposito: "/>
        <TextView
            android:id="@+id/ChequeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cheque: "/>
        <TextView
            android:id="@+id/TotalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: "/>
    </LinearLayout>
</FrameLayout>